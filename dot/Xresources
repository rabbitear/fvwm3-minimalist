! fvwm3-minimalist config Xresources file


! Neon Colors
*background			: #171717
*foreground			: #F8F8F8
! black
*color0				: #171717
*color8				: #38252C
! red
*color1				: #D81765
*color9				: #FF0000
! green
*color2				: #97D01A
*color10			: #76B639
! yellow
*color3				: #FFA800
*color11			: #E1A126
! blue
*color4				: #16B1FB
*color12			: #289CD5
! magenta
*color5				: #FF2491
*color13			: #FF2491
! cyan
*color6				: #0FDCB6
*color14			: #0A9B81
! white
*color7				: #EBEBEB
*color15			: #F8F8F8


! ==== URxvt config ====
! To test fonts in the terminal use this:
! $ printf '\e]710;%s\007' "xft:Terminus:pixelsize=12"

! The font
URxvt.font: xft:NotoMono
URxvt.scrollBar: false

! Somethings need to lessen the distance between chars, use letterSpace:
!URxvt.letterSpace: -1


! This creates a transparent background.
urxvt*depth: 32
urxvt*background: rgba:0000/0000/0200/c800


! Scrollback position
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Scroll secondary screen, as with less
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

URxvt.perl-ext-common: default,matcher,url-select,selection-to-clipboard,keyboard-select,font-size,-confirm-paste

URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5
 
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-Escape:keyboard-select:activate
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

URxvt.keysym.C-S-Down:  resize-font:smaller
URxvt.keysym.C-S-Up:    resize-font:bigger
 
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.Keysym.M-v: perl:clipboard:paste

